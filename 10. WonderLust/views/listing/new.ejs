<% layout('layouts/boilerplate') %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <div class="container">
                    <h1>Create your list</h1>
                    <form method="post" action="/listing">
                        <div class="mb-3">
                            <label for="title" class="form-lable">Title</label>
                            <input type="text" name='listing[title]' placeholder="Enter your title"
                                class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-lable">Image</label>
                            <input type="text" name='listing[image]' placeholder="Enter your image url/link"
                                class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-lable">Description</label>
                            <textarea name='listing[description]' placeholder="Enter your description"
                                class="form-control"></textarea>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-4">
                                <label for="price" class="form-lable">Price</label>
                                <input type="number" name='listing[price]' placeholder="Enter your price"
                                    class="form-control">
                            </div>
                            <div class="mb-3 col-md-8">
                                <label for="country" class="form-lable">Country</label>
                                <input type="text" name='listing[country]' placeholder="Enter your country"
                                    class="form-control">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-lable">Location</label>
                            <input type="text" name='listing[location]' placeholder="Enter your location"
                                class="form-control">
                        </div>

                        <button class="btn btn-dark">submit</button>
                    </form>
                </div>
            </div>
        </div>
    </body>

    </html>